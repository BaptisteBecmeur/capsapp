<div class="container-fluid">
  <div class="container">
    <div class="col-md-3">
        <ul class="sidebar-list">
          <li class="sidebar-item"><%= link_to "Mes prestations", prestations_path, class:"sidebar-link" %></li>
          <li class="sidebar-item"><%= link_to "Mes réservations", your_reservations_path, class:"sidebar-link" %></li>
          <li class="sidebar-item"><%= link_to "Suivi", your_books_path, class:"sidebar-link active" %></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading"> Mes transactions</div>
            <div class="panel-body">
                <% @books.order("id DESC").each do |book| %>
                <div class="row">

                   <div class="col-md-6">
                       <%= link_to prestation_path(book.prestation) do %>
                           <%= image_tag book.prestation.photos[0].image.url(:thumb) if book.prestation.photos.length > 0 %>
                       <% end %>
                   </div>
                   <div class="col-md-2">
                       <%= link_to user_path(book.prestation.user) do %>
                           <%= image_tag avatar_url(book.prestation.user), class:"img-circle avatar-medium" %>
                       <% end %>
                   </div>
                   <div class="col-md-2 right">
                       <h4><%= book.total %> €</h4>
                   </div>
                </div>
                <hr>
              <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
