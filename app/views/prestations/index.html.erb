<div class="container-fluid">
  <div class="container">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><%= link_to "Mes prestations", prestations_path, class:"sidebar-link active" %></li>
        <li class="sidebar-item"><%= link_to "Mes réservations", your_reservations_path, class:"sidebar-link" %></li>
          <li class="sidebar-item"><%= link_to "Suivi", your_books_path, class:"sidebar-link" %></li>
      </ul>
    </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">Mes prestations
            </div>
              <div class="panel-body">
                <% @prestations.each do |prestation| %>
                <div class="row">
                  <div class="col-md-2">
                    <%= image_tag prestation.photos[0].image.url(:thumb) if prestation.photos.length > 0 %>
                  </div>
                <div class="col-md-7">
                    <h4><%= prestation.listing_name %></h4>
                </div>
                <div class="col-md-3 right">
                  <%= link_to "Mettre à jour", edit_prestation_path(prestation), class: "btn btn-primary" %>
              </div>
            </div>
            <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
