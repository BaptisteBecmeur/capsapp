<div class="panel panel-default">
    <div class="panel-body">
        <!-- Photo principale de l'annonce -->
     <div class="row">
        <div class="col-md-12">
        <%= image_tag @photos[0].image.url(), class:"img-responsive" if @photos.length >0 %>
      </div>
    </div>

    <br>

    <!-- Informations principales -->
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-3 text-center">
            <%= image_tag avatar_url(@prestation.user), class:"img-circle avatar-large" %>
            <br>
            <br>
            <%= @prestation.user.fullname %>
           </div>
          <div class="col-md-9">
            <h4><%= @prestation.name_scene %></h4>
            <%= @prestation.address %>

        <div class="row text-center row-space-1">
          <div class="col-sm-3">
            <i class="fa fa-star-o fa-2x"></i>
          </div>

          <div class="col-sm-3">
            <i class="fa fa-magic fa-2x"></i>
          </div>

          <div class="col-sm-3">
            <i class="fa fa-clock-o fa-2x"></i>
          </div>

          <div class="col-sm-3">
            <i class="fa fa-location-arrow fa-2x"></i>
          </div>
        </div>

        <div class="row text-center">
          <div class="col-sm-3">
            <%= @prestation.talent %>
          </div>
          <div class="col-sm-3">
            <%= @prestation.showing_type %>
          </div>
          <div class="col-sm-3">
            <%= @prestation.duration %> <%= @prestation.duration > 1 ? "heures" : "heure" %>
          </div>
          <div class="col-sm-3">
            <%= @prestation.zone_km %> <%= @prestation.zone_km > 1 ? "km" : "km" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <!-- Formulaire de reservation -->
      <%= render 'reservations/form' %>
    </div>
  </div>
      <!-- Description -->
    <div class="row">
      <div class="col-md-12">
        <h2>A propos de cette prestation</h2>
          <p><%= @prestation.summary %></p>
      </div>
    </div>
  <!-- Equipements -->
  <div class="row">
    <div class="col-md-2">
      <p>Je peux me produire</p>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-6">
          <ul class="equipments">
            <li class="<%= 'text-line-through' if !@prestation.is_indoor %>">En intérieur</li>
            <li class="<%= 'text-line-through' if !@prestation.is_outdoor %>">En extérieur</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <p>Option</p>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-6">
          <ul class="equipments">
            <li class="<%= 'text-line-through' if !@prestation.is_equipment %>">Équipement</li>
          </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- Carousel -->
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->



            <% if @photos %>
              <ol class="carousel-indicators">
            <% @photos.each_with_index do |photo, index| %>

                  <li data-target="#myCarousel" data-slide-to="<%= index %>" class="<%= 'active' if photo.id == @photos[0].id %>"></li>
                  <% end %>
              </ol>
          <% end %>


          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <% if @photos %>
              <% @photos.each do |photo| %>
                <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                  <%= image_tag photo.image.url() %>
                </div>
              <% end %>
            <% end %>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Précédent</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Suivant</span>
          </a>
        </div>
      </div>
    </div>

    <br/>

    <!-- Google Maps -->
    <div class="row">
      <div class="col-md-12">
        <div id="map"></div>
        <style>
            #map {
              width: 100%;
              height: 400px;
              background-color: grey;
            }
        </style>
        <script>
            function initMap() {
              var uluru = {lat: <%= @prestation.latitude %>, lng: <%= @prestation.longitude %>};
              var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: uluru
              });
              var marker = new google.maps.Marker({
                position: uluru,
                map: map
              });
            }
        </script>
        <script async defer
          src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAuSYjCQ3xtOyrQ8C1QiuAy_Qsyr3xEPwg&callback=initMap">
        </script>
      </div>
    </div>

    <!-- Artistes à proximité -->
    <h3>Artiste à proximité</h3>
      <div class="row">
        <% for prestation in @prestation.nearbys(2).limit(3) %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag prestation.photos[0].image.url(:medium) if prestation.photos.length > 0 %>
          </div>
          <div class="panel-body">
            <%= link_to prestation.listing_name, prestation %><br>
              (à <%= (prestation.distance*1.6).round(2) %> km)
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
