<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
        Proposez votre prestation
    </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for @prestation, html: {multipart: true} do |f| %>
            <%= render 'shared/errors' %>
          <div class="row">
            <div class="col-md-4 select">
              <div class="form-group">
                <label>Vous êtes</label>
                  <%= f.select :talent, [["Maison","Maison"], ["Appartement","Appartement"],
                        ["Bed & Breakfast", "Bed & Breakfast"]], id: "home_type",
                            prompt: "A sélectionner...", class: "form-control" %>
                </div>
              </div>
              <div class="col-md-4 select">
                <div class="form-group">
                  <label>Type de prestation</label>
                      <%= f.select :showing_type, [["Logement entier","Logement entier"], ["Chambre privée","Chambre privée"],
                            ["Chambre partagée","Chambre partagée"]],
                            prompt: "A sélectionner...", class: "form-control" %>
                </div>
              </div>
              <div class="col-md-4 select">
                <div class="form-group">
                    <label> Durée de votre prestation</label>
                      <%= f.select :duration, [["1 voyageur",1], ["2 voyageurs",2],
                            ["3 voyageurs", 3], ["4 voyageurs",4], ["5 voyageurs",5], ["6 voyageurs",6]],
                            prompt: "A sélectionner...", class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4 select">
                 <div class="form-group">
                    <label>Chambre(s)</label>
                      <%= f.select :zone_km, [["1 chambre",1], ["2 chambres",2],
                        ["3 chambres", 3], ["4 chambres ou plus",4]],
                        prompt: "Sélectionner le nombre", class: "form-control" %>
                </div>
              </div>
            </div>

             <div class="row">
              <div class="form-group">
                <label>Votre nom de scène</label>
                <%= f.text_field :name_scene, placeholder: "Nom de scène", class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>Donnez un nom à votre prestation</label>
                <%= f.text_field :listing_name, placeholder: "Titre de l'annonce", class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>Résumé</label>
                <%= f.text_area :summary, rows:4, placeholder: "Décrivez le décor, l'ambiance, ce qui se trouve à proximité, etc...",
                        class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>Adresse</label>
                <%= f.text_field :address, placeholder: "Où est situé votre logement ?", class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <span class="btn btn-default btn-file">
                    <i class = "fa fa-cloud-upload fa-lg"></i> Téléchargez vos photos !
                    <%= file_field_tag "images[]", type: :file, multiple: true %>
                  </span>
                </div>
              </div>
            </div>

            <div id="photos"><%= render 'photos/list' %></div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                    <%= f.check_box :is_indoor %> Prestation en intérieur
                </div>
                <div class="form-group">
                  <%= f.check_box :is_outdoor %> Prestation en extérieur
                </div>
                <div class="form-group">
                  <%= f.check_box :is_equipment %> Penderie/Commode
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label>Prix par nuit</label>
                    <div class="input-group">
                      <%= f.text_field :price, placeholder: "ex: 45€", class: "form-control" %>
                    <div class="input-group-addon">€</div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <%= f.check_box :active %> Annonce active
              </div>
            </div>

            <div class="actions">
              <%= f.submit "Je valide mon annonce", class: "btn btn-primary"%>
              <% if controller.action_name == 'edit' && Rails.env.development? %>
                  <br /><br /><br />
                <%= link_to "Je supprime mon annonce", prestation_path(@prestation), method: :delete, data: {confirm: "Supprimer mon annonce?"} %>
              <% end %>
            </div>
          <% end %>
       </div>
    </div>
  </div>
</div>
